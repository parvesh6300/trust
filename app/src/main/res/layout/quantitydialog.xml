<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400sp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:text="Request Stock"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textAlignment="gravity"
        android:gravity="center_vertical|center_horizontal"
        android:background="@color/purple"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:background="@color/divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#bb9acc"
        android:padding="10sp">


        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="0"
            android:textSize="80sp" />

        <TextView
            android:id="@+id/tv_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="+"
            android:textColor="@color/purple"
            android:textSize="40sp"
            android:background="#bb9acc"
            android:layout_marginRight="15sp"/>

        <TextView
            android:id="@+id/tv_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_plus"
            android:text="-"
            android:textColor="@color/purple"
            android:textSize="40sp"
            android:background="#bb9acc"
            android:layout_marginRight="20sp"
            />

    </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5sp"
            android:layout_below="@+id/tv_quantity"
            android:background="@color/divider" />


        <TextView
            android:id="@+id/tv_current_time"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:textAlignment="gravity"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="5sp"
            android:text="2016 Oct 14 10:00"
            android:textSize="30sp"
            android:textColor="@color/purple" />



    <View
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:layout_below="@+id/tv_quantity"
        android:background="@color/divider"
        android:layout_marginTop="5sp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15sp">


        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Product"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_product_cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Category"
            android:textSize="25sp"
            android:layout_below="@+id/tv_product_name"/>

        <ImageView
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/forwardarrow" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:layout_below="@+id/tv_quantity"
        android:layout_marginTop="5sp"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Cancel"
            android:layout_weight=".6"
            android:textAlignment="gravity"
            android:textSize="20sp"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/purple"/>

        <View
            android:layout_width=".5sp"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_quantity"
            android:layout_marginTop="5sp"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/tv_request"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Request Stock"
            android:layout_weight=".4"
            android:textAlignment="gravity"
            android:textSize="20sp"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/purple"/>


    </LinearLayout>

</LinearLayout>
