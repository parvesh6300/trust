<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rel_parent_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuyPlanActivity"
    android:paddingEnd="20dp"
    android:paddingStart="20dp"
    android:background="@drawable/background_1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Service"
        android:textSize="20sp"
        android:textAlignment="gravity"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:layout_marginTop="10sp"
        android:id="@+id/header"
        android:textStyle="bold"
        android:typeface="monospace"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/searchback"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/search_layout"
        android:layout_below="@id/header">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:hint="Search By Brand or Name"
            android:typeface="monospace"
            android:layout_marginStart="10dp"
            android:textColorHint="@color/graytext"
            android:textSize="15sp"
            android:paddingStart="10dp"
            android:layout_marginEnd="40dp"
            android:id="@+id/search"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/searchbutton"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="650dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@drawable/form_back"
        android:layout_below="@+id/search_layout"
        android:layout_marginTop="20dp"
        android:layout_above="@+id/buy"
        android:id="@+id/list_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:weightSum="2"
            android:background="@color/textColor"
            android:id="@+id/header1">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="SERVICE"
                android:textColor="@color/white"
                android:typeface="monospace"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="10dp"/>

            <!--<TextView-->
                <!--android:layout_width="172dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="PRODUCT COST"-->
                <!--android:textColor="@color/white"-->
                <!--android:typeface="monospace"-->
                <!--android:textSize="25sp"-->
                <!--android:textStyle="bold"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_gravity="center"-->
                <!--android:gravity="center" />-->

            <TextView
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:text="COST"
                android:textColor="@color/white"
                android:typeface="monospace"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center" />

        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/servicelist"
            android:layout_marginTop="5dp"
            android:layout_below="@id/header1"
            android:fadeScrollbars="false"
            android:scrollbarSize="10dp"
            android:scrollbarThumbVertical="@drawable/custom_scroll_style"
            android:choiceMode="multipleChoice"/>

    </RelativeLayout>

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="Add to Cart"
        android:textSize="15sp"
        android:textAlignment="gravity"
        android:textColor="@color/white"
        android:layout_marginTop="10sp"
        android:typeface="monospace"
        android:textStyle="bold"
        android:id="@+id/buy"
        android:gravity="center"
        android:background="@drawable/button_background"
        android:layout_above="@+id/gif_loader"
        android:layout_centerHorizontal="true" />

    <pl.droidsonroids.gif.GifTextView
        android:id="@+id/gif_loader"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/loading"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:visibility="invisible"
        />

</RelativeLayout>
