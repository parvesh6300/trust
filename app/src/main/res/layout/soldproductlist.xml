<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="500dp"
    android:layout_height="160dp"
    android:orientation="vertical">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="500dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:background="@drawable/form_back"
        android:elevation="3dp"
        android:weightSum="1"
        android:padding="10dp">


        <ImageView
            android:id="@+id/iv_product_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/cal_icon"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>


        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".4"
            android:gravity="center"
            android:text="Product Name"
            android:textAlignment="gravity"
            android:textColor="@color/textColor"
            android:textSize="30sp"
            android:layout_toRightOf="@+id/iv_product_image"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/tv_product_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".4"
            android:gravity="center"
            android:text="Category"
            android:textAlignment="gravity"
            android:textColor="@color/textColor"
            android:textSize="30sp"
            android:layout_toRightOf="@+id/iv_product_image"
            android:layout_below="@+id/tv_product_name"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tv_quantity_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".6"
            android:gravity="center"
            android:text="Qty. Sold"
            android:textAlignment="gravity"
            android:textColor="@color/textColor"
            android:textSize="30sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".6"
            android:gravity="center"
            android:text="10"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_below="@+id/tv_quantity_label"
            android:background="@drawable/circle"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/transparent" />


</LinearLayout>