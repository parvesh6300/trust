<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rel_parent_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_1"
    tools:context="dcube.com.trust.GuestDetailActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guest Details"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAlignment="gravity"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:layout_marginTop="20sp"
        android:id="@+id/header"
        android:typeface="monospace"/>

    <RelativeLayout
        android:id="@+id/rel_radio_layout"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:background="@drawable/form_back"
        android:gravity="center"
        android:padding="20dp">


        <RadioGroup
            android:id="@+id/radio_group_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sex_text"
            android:layout_marginTop="10dp">

            <RadioButton
                android:id="@+id/radio_retail"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:buttonTint="@color/textColor"
                android:text="Retail client"
                android:textColor="@color/textColor"
                android:textSize="30sp"
                android:typeface="monospace" />

            <EditText
                android:id="@+id/ed_retail_client"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@id/historytext"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/textarea"
                android:gravity="top|left"
                android:padding="5dp"
                android:textColor="@color/textColor"
                android:textSize="25sp"
                android:typeface="monospace"
                android:visibility="invisible"/>


            <RadioButton
                android:id="@+id/radio_institution"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:buttonTint="@color/textColor"
                android:text="Institution"
                android:textColor="@color/textColor"
                android:textSize="30sp"
                android:layout_marginTop="30dp"
                android:typeface="monospace" />


            <EditText
                android:id="@+id/ed_institution"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@id/historytext"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/textarea"
                android:gravity="top|left"
                android:padding="5dp"
                android:textColor="@color/textColor"
                android:textSize="25sp"
                android:typeface="monospace"
                android:visibility="invisible"/>


            <RadioButton
                android:id="@+id/radio_name"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:buttonTint="@color/textColor"
                android:text="Name"
                android:textColor="@color/textColor"
                android:textSize="30sp"
                android:layout_marginTop="30dp"
                android:typeface="monospace" />


            <EditText
                android:id="@+id/ed_name"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@id/historytext"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/textarea"
                android:gravity="top|left"
                android:padding="5dp"
                android:textColor="@color/textColor"
                android:textSize="25sp"
                android:typeface="monospace"
                android:visibility="invisible"/>

        </RadioGroup>


    </RelativeLayout>

    <TextView
        android:id="@+id/buy"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Next"
        android:textSize="30sp"
        android:textAlignment="gravity"
        android:textColor="@color/white"
        android:layout_marginTop="40sp"
        android:typeface="monospace"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/button_background"
        android:layout_below="@+id/rel_radio_layout"
        android:layout_centerHorizontal="true"
        />


    <pl.droidsonroids.gif.GifTextView
        android:id="@+id/gif_loader"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/loading"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:visibility="invisible"
        />



</RelativeLayout>
