<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_1"
    android:orientation="vertical"
    android:padding="10sp"
    android:gravity="center"
    tools:context=".StockControlActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="center_horizontal"
        android:text="View Stock"
        android:textAlignment="gravity"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:typeface="monospace"
        android:textStyle="bold"/>


    <RelativeLayout
        android:layout_width="700dp"
        android:layout_height="80dp"
        android:background="@drawable/searchback"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/search_layout"
        android:layout_below="@id/header">

        <EditText
            android:layout_width="650dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:hint="Search By Brand or Name"
            android:typeface="monospace"
            android:layout_marginLeft="20dp"
            android:textColorHint="@color/graytext"
            android:textSize="25sp"
            android:paddingStart="10dp"
            android:id="@+id/search"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/searchbutton"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/list_layout"
        android:layout_width="650dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_layout"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/gif_loader"
        android:background="@drawable/form_back">


        <LinearLayout
            android:id="@+id/header1"
            android:layout_width="650dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/textColor"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="PRODUCT"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                android:typeface="monospace"
                android:layout_marginLeft="40dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="QUANTITY"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                android:typeface="monospace" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="STATUS"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                android:typeface="monospace" />

        </LinearLayout>


        <ListView
            android:id="@+id/stock_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/form_back"
            android:layout_below="@+id/header1"/>


    </RelativeLayout>


    <pl.droidsonroids.gif.GifTextView
        android:id="@+id/gif_loader"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/loading"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        />


</RelativeLayout>
