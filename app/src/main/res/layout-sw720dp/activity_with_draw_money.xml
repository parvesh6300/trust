<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rel_parent_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_1"
    tools:context="dcube.com.trust.WithDrawMoneyActivity">


    <TextView
        android:id="@+id/tv_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="WithDraw Money"
        android:textAlignment="gravity"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        android:typeface="monospace"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/lin_bra_bal"
            android:layout_width="700dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:paddingBottom="50dp"
            android:paddingTop="30dp"
            android:background="@drawable/form_back">



            <RelativeLayout
                android:layout_width="700dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:gravity="center">


                <TextView
                    android:id="@+id/tv_total_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:text="Branch Balance : "
                    android:textColor="@color/purple"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:typeface="monospace" />


                <TextView
                    android:id="@+id/tv_bank_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:text="0 TZS"
                    android:textColor="@color/purple"
                    android:textSize="30sp"
                    android:typeface="monospace"
                    android:layout_toRightOf="@+id/tv_total_label"
                    android:layout_marginRight="20dp"/>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="700dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <EditText
                    android:id="@+id/ed_wd_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/tv_amount_label"
                    android:hint="Enter amount"
                    android:inputType="number"
                    android:textSize="30sp"
                    android:layout_marginEnd="10dp"
                    android:layout_centerInParent="true"
                    android:layout_toStartOf="@+id/tv_tzss_label"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/tv_tzss_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TZS"
                    android:textColor="@color/purple"
                    android:textSize="30sp"
                    android:typeface="monospace"
                    android:layout_centerInParent="true"
                    android:layout_toStartOf="@+id/tv_wd_amount"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/tv_wd_amount"
                    android:layout_width="250dp"
                    android:layout_height="80dp"
                    android:background="@drawable/button_background"
                    android:gravity="center"
                    android:text="WithDraw Balance"
                    android:layout_alignParentRight="true"
                    android:typeface="monospace"
                    android:textAlignment="gravity"
                    android:textColor="@color/white"
                    android:textSize="30sp" />


            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_cash_in_hand_layout"
            android:layout_width="700dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:paddingBottom="50dp"
            android:paddingTop="30dp"
            android:layout_below="@+id/lin_bra_bal"
            android:background="@drawable/form_back">


            <RelativeLayout
                android:layout_width="700dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:gravity="center">


                <TextView
                    android:id="@+id/tv_balance_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:text="Cash In Hand : "
                    android:textColor="@color/purple"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:typeface="monospace" />


                <TextView
                    android:id="@+id/tv_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:text="0 TZS"
                    android:textColor="@color/purple"
                    android:textSize="30sp"
                    android:typeface="monospace"
                    android:layout_toRightOf="@+id/tv_balance_label"
                    android:layout_marginRight="20dp"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="700dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <EditText
                    android:id="@+id/ed_petty_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/tv_amount_label"
                    android:hint="Enter amount"
                    android:inputType="number"
                    android:textSize="30sp"
                    android:layout_marginEnd="10dp"
                    android:layout_centerInParent="true"
                    android:layout_toStartOf="@+id/tv_tsh_label"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/tv_tsh_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TZS"
                    android:textColor="@color/purple"
                    android:textSize="30sp"
                    android:typeface="monospace"
                    android:layout_centerInParent="true"
                    android:layout_toStartOf="@+id/tv_assign_petty"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/tv_assign_petty"
                    android:layout_width="250dp"
                    android:layout_height="80dp"
                    android:background="@drawable/button_background"
                    android:gravity="center"
                    android:text="Assign Petty Cash"
                    android:layout_alignParentRight="true"
                    android:typeface="monospace"
                    android:textAlignment="gravity"
                    android:textColor="@color/white"
                    android:textSize="30sp" />



            </RelativeLayout>



            <RelativeLayout
                android:layout_width="700dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <EditText
                    android:id="@+id/ed_exp_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/tv_amount_label"
                    android:hint="Enter amount"
                    android:inputType="number"
                    android:textSize="30sp"
                    android:layout_marginEnd="10dp"
                    android:layout_centerInParent="true"
                    android:layout_toStartOf="@+id/tv_tzs_label"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/tv_tzs_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TZS"
                    android:textColor="@color/purple"
                    android:textSize="30sp"
                    android:typeface="monospace"
                    android:layout_centerInParent="true"
                    android:layout_toStartOf="@+id/tv_assign_exp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/tv_assign_exp"
                    android:layout_width="250dp"
                    android:layout_height="80dp"
                    android:background="@drawable/button_background"
                    android:gravity="center"
                    android:text="Assign Expense Balance"
                    android:layout_alignParentRight="true"
                    android:typeface="monospace"
                    android:textAlignment="gravity"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_date_time_layout"
            android:layout_width="700dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:layout_below="@+id/lin_cash_in_hand_layout"
            android:background="@drawable/form_back"
            android:layout_centerHorizontal="true"
            >

            <LinearLayout
                android:layout_width="500dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:weightSum="2"
                android:background="@drawable/form_back"
                android:gravity="center"
                >

                <RelativeLayout
                    android:id="@+id/datepicker"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/textarea">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/cal_icon" />

                    <TextView
                        android:id="@+id/datepick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:text="Date"
                        android:textColor="@color/textColor"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:typeface="monospace" />

                </RelativeLayout>

                <!--<View-->
                    <!--android:layout_width="40dp"-->
                    <!--android:layout_height="match_parent" />-->

                <!--<RelativeLayout-->
                    <!--android:id="@+id/timepicker"-->
                    <!--android:layout_width="220dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_weight="1"-->
                    <!--android:background="@drawable/textarea">-->

                    <!--<ImageView-->
                        <!--android:layout_width="50dp"-->
                        <!--android:layout_height="50dp"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--android:layout_marginLeft="20dp"-->
                        <!--android:src="@drawable/clock" />-->

                    <!--<TextView-->
                        <!--android:id="@+id/timepick"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_alignParentRight="true"-->
                        <!--android:layout_centerVertical="true"-->
                        <!--android:layout_marginRight="40dp"-->
                        <!--android:text="Time"-->
                        <!--android:textColor="@color/textColor"-->
                        <!--android:textSize="30sp"-->
                        <!--android:textStyle="bold"-->
                        <!--android:typeface="monospace" />-->

                <!--</RelativeLayout>-->

            </LinearLayout>

        </LinearLayout>




    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rel_back"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/gif_loader"
        android:layout_marginBottom="10dp"
        android:gravity="center">


        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:text="Back"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:typeface="monospace"

            />

    </RelativeLayout>



    <pl.droidsonroids.gif.GifTextView
        android:id="@+id/gif_loader"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/loading"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        />


</RelativeLayout>
